<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:richClosure.ViewModels"
        x:Class="richClosure.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="659.833" Width="862.5" ResizeMode="CanMinimize">
    <Window.Resources>
        <viewModels:PacketViewModel x:Key="PacketViewModel"/>
    </Window.Resources>

    <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Height="617" Width="852">
        <Grid.RowDefinitions>
            <RowDefinition Height="197*"/>
            <RowDefinition Height="398*"/>
            <RowDefinition Height="22*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="122*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="packetDataGrid"  GridLinesVisibility="None"
                  CanUserSortColumns="True" IsReadOnly="True" AutoGenerateColumns="False"
                  Margin="10,40,10,334" HorizontalAlignment="Stretch" Width="Auto"
                  Height="Auto" VerticalAlignment="Stretch" Foreground="Black" Grid.ColumnSpan="2" FontSize="14" SelectedItem="{Binding SourcePacket}"
                  ItemsSource="{Binding PacketObservableCollection}" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding PacketId}" Header="ID"/>
                <DataGridTextColumn Binding="{Binding TimeDateCaptured}" Header="Time Captured"/>
                <DataGridTextColumn Binding="{Binding PacketDisplayedProtocol}" Header="Protocol"/>
                <DataGridTextColumn Binding="{Binding Ip4Adrs}" Header="Destination IP"/>
                <DataGridTextColumn Binding="{Binding Ip4SourceAdr}" Header="Source IP"/>
                <DataGridTextColumn Binding="{Binding PacketComment}" Header="Comment"/>
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="SetFilterMenuItem" Header="Set Filet" SubmenuOpened="SetFilterMenuItem_SubmenuOpened">
                        <MenuItem x:Name="EthFilter" Header="Ethernet" Click="MenuItem_EthernetFilterClick"/>
                        <MenuItem x:Name="Ip4Filter" Header="IPv4" Click="MenuItem_Ip4FilterClick"/>
                        <MenuItem x:Name="TcpFilter" Header="TCP" Click="MenuItem_TcpFilterClick"/>
                        <MenuItem x:Name="UdpFilter" Header="UDP" Click="MenuItem_UdpFilterClick"/>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IpProtocol}" Value="TCP">
                            <Setter Property="Background" Value="LightBlue"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IpProtocol}" Value="UDP">
                            <Setter Property="Background" Value="LightGreen"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IpProtocol}" Value="ICMP">
                            <Setter Property="Background" Value="LightSalmon"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        <TreeView x:Name="packetTreeView" Margin="10,0,0,165" Width="832" Height="171" VerticalAlignment="Bottom"
                  HorizontalAlignment="Left" Foreground="Black" FontSize="14" Grid.ColumnSpan="2" ItemsSource="{Binding TreeViewItems}" Grid.Row="1"/>

        <Grid Margin="10,0,0,-40" HorizontalAlignment="Left" Width="832" Grid.ColumnSpan="2" Grid.Row="2">
            <Label x:Name="shownPacketsLabel" Content="Shown packets:" VerticalAlignment="Top" Margin="141,0,609,0" FontSize="10"/>
            <Label x:Name="totalPacketsLabel" Content="Total packets: " HorizontalAlignment="Left" VerticalAlignment="Top" Width="73" FontSize="10"/>
            <Label x:Name="TotalPacketsLabel_Num" Content="{Binding TotalPacketCount}" HorizontalAlignment="Left" Margin="73,0,0,0" VerticalAlignment="Top" Width="63" Height="25"/>
            <Label x:Name="ShownPacketsLabel_Num" HorizontalAlignment="Left" Margin="228,0,0,0" VerticalAlignment="Top" Width="63" Height="25" Content="{Binding ShownPacketCount}"/>
        </Grid>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="48" Height="25" Command="{Binding ShowAdapterSelectionCommand, Mode=OneWay}"/>
        <Button x:Name="stopButton" Content="Stop" HorizontalAlignment="Left" Margin="63,10,0,0" VerticalAlignment="Top" Width="48" Height="25" Command="{Binding StopSniffingPackets, Mode=OneWay}"/>
        <TextBox x:Name="searchTextBox" Text="{Binding SearchString}" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="25" Margin="338,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="420">
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding SearchPackets, Mode=OneWay }"/>
            </TextBox.InputBindings>
        </TextBox>
        <Button x:Name="searchClearButton" Content="Clear" Grid.Column="1" HorizontalAlignment="Left" Margin="399,10,0,0" VerticalAlignment="Top" Width="79" Height="25" Command="{Binding ClearSearchResult, Mode=OneWay}"/>
        <TextBox x:Name="packetHexTextBox" HorizontalAlignment="Left" Height="155" Margin="10,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="411" Grid.ColumnSpan="2" FontFamily="Global Monospace" Text="{Binding HexData, Mode=OneWay}" Grid.Row="1"/>
        <TextBox x:Name="packetAsciiTextBox" Grid.Column="1" HorizontalAlignment="Left" Height="155" Margin="62,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="416" FontFamily="Global Monospace" Text="{Binding AsciiData, Mode=OneWay}" Grid.Row="1"/>
    </Grid>
</Window>
